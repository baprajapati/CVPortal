<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | CV Portal</title>

    <link href="~/Content/AdminLTE/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/AdminLTE/icheck-bootstrap/icheck-bootstrap.min.css">
    <link href="~/Content/css/adminlte.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="~/Content/AdminLTE/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/css/toastr.css" rel="stylesheet" />
    <link href="~/Content/css/custom.css" rel="stylesheet" />

    <style type="text/css">
        .hidden {
            display: none;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto top-menu">
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Logout", new { area = "", controller = "Account" })" class="nav-link">Logout</a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="javascript:void(0);" class="brand-link" style="line-height:1.2;">
                <img src="~/Content/img/left-logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light"><img src="~/Content/img/right-logo.png" style="height:25px;" alt="AdminLTE Logo"></span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="javascript:void(0);" class="d-block">Admin</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("UserIndex","User")" class="nav-link userindex">
                                <i class="nav-icon fas fa-th"></i>
                                <p>Users</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("DepartmentIndex","Department")" class="nav-link departmentindex">
                                <i class="nav-icon fas fa-th"></i>
                                <p>Departments</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("VendorIndex","Vendor")" class="nav-link vendorindex">
                                <i class="nav-icon fas fa-th"></i>
                                <p>Vendors</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        @RenderBody()
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> V20
            </div>
            <strong>Copyright &copy; 2020 <a href="https://www.suzukimotorcycle.co.in/">Suzuki Motorcycle India Pvt. Ltd.</a>.</strong> All rights
            reserved.
        </footer>
        <aside class="control-sidebar control-sidebar-dark"></aside>
    </div>
    <script src="~/Content/AdminLTE/jquery/jquery.min.js"></script>
    <script src="~/Content/AdminLTE/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/adminlte.min.js"></script>
    <script src="~/Content/js/demo.js"></script>
    <script src="~/Content/AdminLTE/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/AdminLTE/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/js/toastr.js"></script>
    <script src="~/Content/js/bootbox.min.js"></script>
    <script type="text/javascript">
        function convertStringToArray(value, delimiter) {
            var strArr = value.split(delimiter);
            var lstArr = [];
            for (i = 0; i < strArr.length; i++)
                lstArr.push(strArr[i]);
            return lstArr;
        }

        function setActiveMenu() {
            $(".nav-item a").removeClass("active");
            $(".topmenu li").removeClass("active");

            if (window.location.href.includes("UserIndex") || window.location.href.includes("AddUser") || window.location.href.includes("EditUser")) {
                $(".userindex").addClass("active");
            } else if (window.location.href.includes("DepartmentIndex") || window.location.href.includes("AddDepartment") || window.location.href.includes("EditDepartment")) {
                $(".departmentindex").addClass("active");
            } else if (window.location.href.includes("VendorIndex")) {
                $(".vendorindex").addClass("active");
            }
        }

        $(function () {
            setActiveMenu();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
