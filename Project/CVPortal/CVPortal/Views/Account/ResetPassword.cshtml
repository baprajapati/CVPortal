@model CVPortal.ViewModels.ResetPasswordUser
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LayoutOuter.cshtml";
}

<div id="app">
    <main>
        <div class="section body-container landing-page-container">
            <div class="">
                <div class="row v-middle">
                    <div class="twelve columns left text-center">
                        <img src="~/Content/Login/Suzuki-Logo.jpg" alt="Suzuki&#39;s signup landing page" class="top-img">
                        <h3 style="position: relative; top: -30px; margin: 0; font-weight: bold;">SMIPL Vendor & Customer Registration Portal</h3>
                    </div>
                </div>
                <div class="row v-middle">
                    <div class="eight columns left" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                        <img src="~/Content/Login/suzuki-bike.png" alt="Suzuki&#39;s signup landing page" class="left-img">
                    </div>
                    <div class="four columns right" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;margin:1%;">
                        <div class="phone-no-container" style="margin: 14%;">
                            <h1 class="text-black landing-head"> Reset Password </h1>
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmResetPassword" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Token, new { Value = Request.QueryString["token"] })


                                <div data-v-24b04a24="" class="signup-mobile-input su-input-group su-static-label" data-v-69ce196a="">
                                    <label data-v-24b04a24="" class="su-input-label su-visible">New Password</label>
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "su-spinner", autocorrect = "off", placeholder = "", autofocus = "autofocus" })
                                    <div>
                                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "error" })
                                    </div>
                                </div>
                                <div data-v-24b04a24="" class="signup-mobile-input su-input-group su-static-label" data-v-69ce196a="">
                                    <label data-v-24b04a24="" class="su-input-label su-visible">Confirm Password</label>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "su-spinner", autocorrect = "off", placeholder = "", autofocus = "autofocus" })
                                    <div>
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error" })
                                    </div>
                                </div>
                                <button data-v-26dfdbb3="" type="submit" class="button button-blue signup-mobile-submit" data-v-69ce196a="">
                                    <span class="js-lable">Reset password</span>
                                </button><br />
                                <a href="@Url.Action("Login", "Account")">Login here...</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        jQuery(document).ready(function () {
            $('#txtNewPassword').focus();
        });

        $('#frmResetPassword').submit(function () {
            if ($(this).valid()) {
                $(".js-lable").html("Loading...");
                $.ajax({
                    url: "/Account/ResetPassword",
                    type: "POST",
                    data: $('#frmResetPassword').serialize(),
                    dataType: 'json',
                    success: function (response) {
                        $(".js-lable").html("Reset password");
                        if (response == true) {
                            toastr.success("Password reset successfully.", "Reset Password");
                            setTimeout(function () {
                                window.location.href = "@Url.Action("Login","Account")";
                            }, 2000);
                        } else {
                            toastr.error("Error while reset password ! Please try again", "Reset Password");
                        }
                    },
                    error: function () {
                        $(".js-lable").html("Reset password");
                        toastr.error("Reset Password failed !", "Reset Password");
                    }
                });
            }
            return false;
        })
    </script>
}
